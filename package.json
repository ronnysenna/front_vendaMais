{
  "name": "betterauth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development dotenv -e .env -- next dev",
    "build": "NODE_ENV=production dotenv -e .env -- next build",
    "build:clean": "rm -rf .next && NODE_ENV=production dotenv -e .env -- next build",
    "start": "NODE_ENV=production dotenv -e .env -- next start",
    "rebuild:full": "./scripts/clean-rebuild.sh",
    "lint": "next lint",
    "generate": "prisma generate",
    "prepare": "prisma generate",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "tools": "./scripts/vendamais-master.sh",
    "analyze": "./scripts/vendamais-master.sh analyze",
    "cleanup": "./scripts/vendamais-master.sh cleanup",
    "clean": "./scripts/vendamais-master.sh clean",
    "security": "./scripts/vendamais-master.sh security",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:layout": "vitest run src/tests/layout-cache.test.ts",
    "test:all": "./scripts/vendamais-master.sh test-all",
    "test:build": "./scripts/vendamais-master.sh test-build",
    "validate:docker": "./scripts/vendamais-master.sh validate-docker",
    "docker:deploy": "chmod +x ./scripts/update-build-id.sh && ./scripts/update-build-id.sh && ./scripts/vendamais-master.sh docker-deploy",
    "cache:clear": "rm -rf .next/cache",
    "cache:clean": "chmod +x ./scripts/clean-caches.sh && ./scripts/clean-caches.sh",
    "cache:clean:all": "chmod +x ./scripts/clean-caches.sh && ./scripts/clean-caches.sh --all",
    "update:buildid": "chmod +x ./scripts/update-build-id.sh && ./scripts/update-build-id.sh"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@phosphor-icons/react": "^2.1.7",
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@types/react-bootstrap": "^1.0.1",
    "better-auth": "^1.2.7",
    "bootstrap": "^5.3.6",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.6.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.508.0",
    "next": "15.3.2",
    "nodemailer": "^7.0.3",
    "prisma": "^6.7.0",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.2",
    "tailwind-merge": "^3.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^8.0.0",
    "msw": "^2.10.2",
    "playwright-chromium": "^1.53.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5",
    "vitest": "^3.2.3"
  },
  "nixpacks": {
    "phases": {
      "setup": {
        "nixPkgs": [
          "nodejs_20",
          "yarn"
        ]
      }
    }
  }
}
